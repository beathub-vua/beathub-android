<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beathub_background">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:background="@color/white"
        android:elevation="20dp"
        android:backgroundTint="@color/beathub_buttons">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:text="Welcome, beathub!"
            android:textColor="@color/beathub_text"
            android:textSize="20sp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logoutImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="56dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/ic_logout"
            android:tint="@color/beathub_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileIconImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/cogwheel"
            android:tint="@color/beathub_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reposRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"
        tools:listitem="@layout/item_repo" />
</LinearLayout>